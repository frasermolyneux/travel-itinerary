@model MX.TravelItinerary.Web.Pages.Trips.TripTimelineDisplayModel
@using System
@using System.Linq
@using System.Collections.Generic
@using MX.TravelItinerary.Web.Data.Models
@{
    var timeline = Model.Timeline;
    var hasPlannedContent = timeline.Spans.Any() || timeline.Days.Any(day => day.Entries.Count > 0);
    var laneMultiplier = Math.Max(1, timeline.MaxSegmentLaneCount);
    var spansByStartDate = timeline.Spans
    .GroupBy(block => block.StartDate)
    .ToDictionary(group => group.Key, group => group.ToList());
}

@functions {
    private sealed record BookingQuickFact(string Text, string? Variant = null, bool IsMetadata = false);

    private static IReadOnlyList<BookingQuickFact> BuildBookingQuickFacts(Booking booking)
    {
        var facts = new List<BookingQuickFact>();

        if (booking.IsPaid is bool isPaid)
        {
            facts.Add(new BookingQuickFact(isPaid ? "Paid" : "Unpaid", isPaid ? "positive" : "negative", IsMetadata: false));
        }

        if (booking.CancellationByDate is { } cancelBy)
        {
            facts.Add(new BookingQuickFact($"Cancel by {cancelBy:MMM dd}", IsMetadata: false));
        }

        var stay = booking.Metadata?.Stay;
        if (stay is not null)
        {
            if (!string.IsNullOrWhiteSpace(stay.CheckInTime))
            {
                facts.Add(new BookingQuickFact($"{stay.CheckInTime} check-in", IsMetadata: true));
            }

            if (!string.IsNullOrWhiteSpace(stay.CheckOutTime))
            {
                facts.Add(new BookingQuickFact($"{stay.CheckOutTime} check-out", IsMetadata: true));
            }

            if (!string.IsNullOrWhiteSpace(stay.RoomType))
            {
                facts.Add(new BookingQuickFact(stay.RoomType, IsMetadata: true));
            }

            if (stay.Includes is { Count: > 0 } includes)
            {
                foreach (var include in includes.Where(value => !string.IsNullOrWhiteSpace(value)))
                {
                    facts.Add(new BookingQuickFact(include.Trim(), IsMetadata: true));
                }
            }
        }

        return facts;
    }

    private static string? BuildEntryMapLink(ItineraryEntry entry)
    {
        static string BuildQueryLabel(string? preferred, string fallback)
            => string.IsNullOrWhiteSpace(preferred) ? fallback : preferred.Trim();

        static string? FormatLink(string? placeId, string? label)
        {
            if (string.IsNullOrWhiteSpace(placeId))
            {
                return null;
            }

            var placeIdValue = Uri.EscapeDataString(placeId.Trim());
            var queryLabel = string.IsNullOrWhiteSpace(label) ? "Location" : label.Trim();
            var queryValue = Uri.EscapeDataString(queryLabel);
            return $"https://www.google.com/maps/search/?api=1&query={queryValue}&query_place_id={placeIdValue}";
        }

        var baseLabel = BuildQueryLabel(entry.Title, "Trip location");

        var mapLink = FormatLink(entry.GooglePlaceId, baseLabel);
        if (!string.IsNullOrWhiteSpace(mapLink))
        {
            return mapLink;
        }

        var segment = entry.Metadata?.Segment;
        if (segment is null)
        {
            return null;
        }

        mapLink = FormatLink(segment.DeparturePlaceId, $"{baseLabel} departure".Trim());
        if (!string.IsNullOrWhiteSpace(mapLink))
        {
            return mapLink;
        }

        return FormatLink(segment.ArrivalPlaceId, $"{baseLabel} arrival".Trim());
    }
}

