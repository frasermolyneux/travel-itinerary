@model MX.TravelItinerary.Web.Pages.Trips.TripTimelineDisplayModel
@using System.Linq
@using System.Collections.Generic
@using MX.TravelItinerary.Web.Data.Models
@{
    var timeline = Model.Timeline;
    var hasPlannedContent = timeline.Spans.Any() || timeline.Days.Any(day => day.Entries.Count > 0);
    var laneMultiplier = Math.Max(1, timeline.MaxSegmentLaneCount);
}

@if (!hasPlannedContent && Model.ShowEmptyStateMessage)
{
    <div class="alert alert-info">@Model.EmptyStateMessage</div>
}

<div class="timeline-grid" style="--segment-lane-multiplier:@laneMultiplier;" data-timeline-root
    data-trip-id="@Model.Trip.TripId" data-allow-reorder="@Model.AllowEntryReordering.ToString().ToLowerInvariant()">
    @foreach (var day in timeline.Days)
    {
        var dayDateIso = day.Date.ToString("yyyy-MM-dd");
        var dayOrder = string.Join(",", day.Entries.Select(entry => entry.EntryId));
        var dayDataAttributes = Model.AllowEntryReordering
        ? $" data-day-sortable=\"true\" data-day-date=\"{dayDateIso}\" data-current-order=\"{dayOrder}\""
        : string.Empty;
        <div class="timeline-axis" style="grid-row:@day.RowLine;">
            <div class="timeline-axis-dot"></div>
            <div>
                <div class="timeline-day-label">@day.Date.ToString("MMM dd")</div>
                <div class="timeline-day-weekday">@day.Date.ToString("dddd")</div>
            </div>
        </div>
        <div class="timeline-content" style="grid-row:@day.RowLine;" @Html.Raw(dayDataAttributes)>
            <div class="timeline-day-mobile-header">
                <span class="timeline-day-mobile-dot" aria-hidden="true"></span>
                <div>
                    <div class="timeline-day-label">@day.Date.ToString("MMM dd")</div>
                    <div class="timeline-day-weekday">@day.Date.ToString("dddd")</div>
                </div>
            </div>
            @if (day.Entries.Count == 0)
            {
                <div class="timeline-empty text-muted">No entries for this day.</div>
            }
            else
            {
                @foreach (var entry in day.Entries)
                {
                    var entryBooking = Model.GetBookingForEntry(entry.EntryId);
                    var entryTypeToken = entry.ItemType.ToCssToken();
                    var entryDisplayTitle = string.IsNullOrWhiteSpace(entry.Title)
                    ? entry.ToString()
                    : entry.Title;
                    var entryHasDetails = !string.IsNullOrWhiteSpace(entry.Details);
                    var entryHasMetadata = entry.Metadata?.HasContent == true;
                    var canShowBookingInfo = Model.AllowBookingViewing && entryBooking is not null;
                    string? bookingMeta = null;
                    if (canShowBookingInfo)
                    {
                        if (!string.IsNullOrWhiteSpace(entryBooking!.Reference))
                        {
                            bookingMeta = entryBooking.Reference;
                        }

                        if (entryBooking.Cost is not null)
                        {
                            var formattedCost = entryBooking.Cost.Value.ToString("0.##");
                            var costText = string.IsNullOrWhiteSpace(entryBooking.Currency)
                            ? formattedCost
                            : $"{formattedCost} {entryBooking.Currency}";
                            bookingMeta = string.IsNullOrWhiteSpace(bookingMeta)
                            ? costText
                            : $"{bookingMeta} • {costText}";
                        }
                    }
                    var showDetailsPanel = entryHasDetails || entryHasMetadata || canShowBookingInfo;
                    var entryDataAttributes = Model.AllowEntryReordering
                    ? " data-sortable-entry=\"true\" draggable=\"true\""
                    : string.Empty;
                    <div class="timeline-item" data-timeline-item data-item-type="entry" data-item-id="@entry.EntryId"
                        data-entry-id="@entry.EntryId" @Html.Raw(entryDataAttributes)>
                        <div class="timeline-item-body">
                            <div class="timeline-item-heading">
                                <span class="timeline-item-icon bi @entry.ItemType.GetIconClass() segment-type-@entryTypeToken"
                                    aria-hidden="true"></span>
                                <span class="timeline-item-title">@entryDisplayTitle</span>
                            </div>
                            @if (canShowBookingInfo)
                            {
                                <div class="booking-pill segment-type-@entryBooking!.ItemType.ToCssToken()">
                                    <div class="booking-pill-icon">
                                        <span class="bi @entryBooking.ItemType.GetIconClass()" aria-hidden="true"></span>
                                    </div>
                                    <div class="booking-pill-body">
                                        <div class="booking-pill-label">@(entryBooking.Vendor ?? entryBooking.ItemType.GetDisplayName())
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(bookingMeta))
                                        {
                                            <div class="booking-pill-meta">@bookingMeta</div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.AllowEntryReordering)
                        {
                            <button type="button" class="timeline-drag-handle" data-drag-handle aria-label="Drag to reorder entry">
                                <span class="bi bi-grip-vertical" aria-hidden="true"></span>
                                <span class="visually-hidden">Drag to reorder entry</span>
                            </button>
                        }
                        @if (showDetailsPanel)
                        {
                            <div class="timeline-item-details">
                                @if (entryHasDetails)
                                {
                                    <div class="timeline-item-notes">@entry.Details</div>
                                }
                                @if (canShowBookingInfo)
                                {
                                    <div class="booking-summary">
                                        <div class="booking-summary-title">Booking</div>
                                        <dl class="booking-summary-list">
                                            @if (!string.IsNullOrWhiteSpace(entryBooking!.Vendor))
                                            {
                                                <dt>Vendor</dt>
                                                <dd>@entryBooking.Vendor</dd>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(entryBooking.Reference))
                                            {
                                                <dt>Reference</dt>
                                                <dd>@entryBooking.Reference</dd>
                                            }
                                            @if (entryBooking.Cost is not null)
                                            {
                                                <dt>Cost</dt>
                                                <dd>
                                                    @entryBooking.Cost?.ToString("0.##")
                                                    @if (!string.IsNullOrWhiteSpace(entryBooking.Currency))
                                                    {
                                                        <span class="text-muted">@entryBooking.Currency</span>
                                                    }
                                                </dd>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(entryBooking.CancellationPolicy))
                                            {
                                                <dt>Cancellation</dt>
                                                <dd>@entryBooking.CancellationPolicy</dd>
                                            }
                                        </dl>
                                        <div class="booking-summary-actions">
                                            <button type="button" class="btn btn-sm btn-outline-primary" data-booking-action="view"
                                                data-booking-id="@entryBooking.BookingId" data-booking-type="@entryBooking.ItemType"
                                                data-booking-type-label="@entryBooking.ItemType.GetDisplayName()"
                                                data-booking-vendor="@(entryBooking.Vendor ?? string.Empty)"
                                                data-booking-reference="@(entryBooking.Reference ?? string.Empty)"
                                                data-booking-cost="@(entryBooking.Cost?.ToString("0.##") ?? string.Empty)"
                                                data-booking-currency="@(entryBooking.Currency ?? string.Empty)"
                                                data-booking-refundable="@(entryBooking.IsRefundable?.ToString().ToLowerInvariant() ?? string.Empty)"
                                                data-booking-paid="@(entryBooking.IsPaid?.ToString().ToLowerInvariant() ?? string.Empty)"
                                                data-booking-cancellation="@(entryBooking.CancellationPolicy ?? string.Empty)"
                                                data-booking-details="@(entryBooking.ConfirmationDetails ?? string.Empty)"
                                                data-booking-confirmation-url="@(entryBooking.ConfirmationUrl?.ToString() ?? string.Empty)"
                                                data-booking-parent-label="@entryDisplayTitle" data-booking-parent-type="entry"
                                                data-parent-entry="@entry.EntryId">
                                                View full booking
                                            </button>
                                            @if (entryBooking.ConfirmationUrl is not null)
                                            {
                                                <a class="btn btn-sm btn-outline-secondary" target="_blank" rel="noopener"
                                                    href="@entryBooking.ConfirmationUrl">Open booking link</a>
                                            }
                                        </div>
                                    </div>
                                }
                                @if (entryHasMetadata)
                                {
                                    <partial name="_EntryMetadata" model="entry.Metadata" />
                                }
                            </div>
                        }
                        @{
                            var allowBookingCreation = Model.AllowBookingCreation && entryBooking is null;
                            var showActions = Model.AllowEntryEditing || allowBookingCreation;
                        }
                        @if (showActions)
                        {
                            <div class="timeline-actions">
                                @if (Model.AllowEntryEditing)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-primary me-2" data-edit-type="entry"
                                        data-entry-id="@entry.EntryId" data-entry-title="@entry.Title"
                                        data-entry-date="@(entry.Date?.ToString("yyyy-MM-dd") ?? string.Empty)"
                                        data-entry-end="@(entry.EndDate?.ToString("yyyy-MM-dd") ?? string.Empty)"
                                        data-entry-type="@entry.ItemType"
                                        data-entry-is-multi-day="@(entry.IsMultiDay.ToString().ToLowerInvariant())"
                                        data-entry-details="@(entry.Details ?? string.Empty)"
                                        data-entry-flight-airline="@(entry.Metadata?.Flight?.Airline ?? string.Empty)"
                                        data-entry-flight-number="@(entry.Metadata?.Flight?.FlightNumber ?? string.Empty)"
                                        data-entry-flight-departure-airport="@(entry.Metadata?.Flight?.DepartureAirport ?? string.Empty)"
                                        data-entry-flight-departure-time="@(entry.Metadata?.Flight?.DepartureTime ?? string.Empty)"
                                        data-entry-flight-arrival-airport="@(entry.Metadata?.Flight?.ArrivalAirport ?? string.Empty)"
                                        data-entry-flight-arrival-time="@(entry.Metadata?.Flight?.ArrivalTime ?? string.Empty)"
                                        data-entry-stay-property="@(entry.Metadata?.Stay?.PropertyName ?? string.Empty)"
                                        data-entry-stay-address="@(entry.Metadata?.Stay?.Address ?? string.Empty)"
                                        data-entry-stay-check-in="@(entry.Metadata?.Stay?.CheckInTime ?? string.Empty)"
                                        data-entry-stay-check-out="@(entry.Metadata?.Stay?.CheckOutTime ?? string.Empty)"
                                        data-entry-stay-room="@(entry.Metadata?.Stay?.RoomType ?? string.Empty)"
                                        data-entry-stay-confirmation="@(entry.Metadata?.Stay?.ConfirmationNumber ?? string.Empty)">
                                        Edit
                                    </button>
                                    <form method="post" asp-page-handler="DeleteEntry" class="d-inline">
                                        <input type="hidden" name="entryId" value="@entry.EntryId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                }
                                @if (allowBookingCreation)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-secondary" data-booking-action="add"
                                        data-parent-type="entry" data-entry-id="@entry.EntryId" data-entry-title="@entry.Title"
                                        data-entry-type="@entry.ItemType" data-entry-type-label="@entry.ItemType.GetDisplayName()">
                                        Add booking
                                    </button>
                                }
                            </div>
                        }
                    </div>
                }
            }
        </div>
    }

    @foreach (var block in timeline.Spans)
    {
        var segmentType = block.Entry.ItemType.ToCssToken();
        var entryBooking = Model.GetBookingForEntry(block.Entry.EntryId);
        var entryDisplayTitle = string.IsNullOrWhiteSpace(block.Entry.Title)
        ? block.Entry.ToString()
        : block.Entry.Title;
        var entryHasDetails = !string.IsNullOrWhiteSpace(block.Entry.Details);
        var entryHasMetadata = block.Entry.Metadata?.HasContent == true;
        var canShowBookingInfo = Model.AllowBookingViewing && entryBooking is not null;
        string? bookingMeta = null;
        if (canShowBookingInfo)
        {
            if (!string.IsNullOrWhiteSpace(entryBooking!.Reference))
            {
                bookingMeta = entryBooking.Reference;
            }

            if (entryBooking.Cost is not null)
            {
                var formattedCost = entryBooking.Cost.Value.ToString("0.##");
                var costText = string.IsNullOrWhiteSpace(entryBooking.Currency)
                ? formattedCost
                : $"{formattedCost} {entryBooking.Currency}";
                bookingMeta = string.IsNullOrWhiteSpace(bookingMeta)
                ? costText
                : $"{bookingMeta} • {costText}";
            }
        }
        var showDetailsPanel = entryHasDetails || entryHasMetadata || canShowBookingInfo;
        <div class="timeline-segment"
            style="grid-row:@block.RowStart / @block.RowEnd; --lane-index:@block.LaneIndex; --lane-count:@block.LaneCount;"
            data-segment-type="@segmentType">
            <div class="timeline-segment-span" aria-hidden="true"></div>
            <div class="timeline-item timeline-item--segment segment-type-@segmentType" data-timeline-item
                data-item-type="entry" data-item-id="@block.Entry.EntryId">
                <div class="timeline-item-body">
                    <div class="timeline-item-heading">
                        <span class="timeline-item-icon bi @block.Entry.ItemType.GetIconClass() segment-type-@segmentType"
                            aria-hidden="true"></span>
                        <span class="timeline-item-title">@entryDisplayTitle</span>
                    </div>
                    @if (canShowBookingInfo)
                    {
                        <div class="booking-pill segment-type-@entryBooking!.ItemType.ToCssToken()">
                            <div class="booking-pill-icon">
                                <span class="bi @entryBooking.ItemType.GetIconClass()" aria-hidden="true"></span>
                            </div>
                            <div class="booking-pill-body">
                                <div class="booking-pill-label">@(entryBooking.Vendor ?? entryBooking.ItemType.GetDisplayName())
                                </div>
                                @if (!string.IsNullOrWhiteSpace(bookingMeta))
                                {
                                    <div class="booking-pill-meta">@bookingMeta</div>
                                }
                            </div>
                        </div>
                    }
                    <div class="small text-muted">@block.StartDate.ToString("MMM dd") – @block.EndDate.ToString("MMM dd")
                    </div>
                </div>
                @if (showDetailsPanel)
                {
                    <div class="timeline-item-details">
                        @if (entryHasDetails)
                        {
                            <div class="timeline-item-notes">@block.Entry.Details</div>
                        }
                        @if (canShowBookingInfo)
                        {
                            <div class="booking-summary">
                                <div class="booking-summary-title">Booking</div>
                                <dl class="booking-summary-list">
                                    @if (!string.IsNullOrWhiteSpace(entryBooking!.Vendor))
                                    {
                                        <dt>Vendor</dt>
                                        <dd>@entryBooking.Vendor</dd>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(entryBooking.Reference))
                                    {
                                        <dt>Reference</dt>
                                        <dd>@entryBooking.Reference</dd>
                                    }
                                    @if (entryBooking.Cost is not null)
                                    {
                                        <dt>Cost</dt>
                                        <dd>
                                            @entryBooking.Cost?.ToString("0.##")
                                            @if (!string.IsNullOrWhiteSpace(entryBooking.Currency))
                                            {
                                                <span class="text-muted">@entryBooking.Currency</span>
                                            }
                                        </dd>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(entryBooking.CancellationPolicy))
                                    {
                                        <dt>Cancellation</dt>
                                        <dd>@entryBooking.CancellationPolicy</dd>
                                    }
                                </dl>
                                <div class="booking-summary-actions">
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-booking-action="view"
                                        data-booking-id="@entryBooking.BookingId" data-booking-type="@entryBooking.ItemType"
                                        data-booking-type-label="@entryBooking.ItemType.GetDisplayName()"
                                        data-booking-vendor="@(entryBooking.Vendor ?? string.Empty)"
                                        data-booking-reference="@(entryBooking.Reference ?? string.Empty)"
                                        data-booking-cost="@(entryBooking.Cost?.ToString("0.##") ?? string.Empty)"
                                        data-booking-currency="@(entryBooking.Currency ?? string.Empty)"
                                        data-booking-refundable="@(entryBooking.IsRefundable?.ToString().ToLowerInvariant() ?? string.Empty)"
                                        data-booking-paid="@(entryBooking.IsPaid?.ToString().ToLowerInvariant() ?? string.Empty)"
                                        data-booking-cancellation="@(entryBooking.CancellationPolicy ?? string.Empty)"
                                        data-booking-details="@(entryBooking.ConfirmationDetails ?? string.Empty)"
                                        data-booking-confirmation-url="@(entryBooking.ConfirmationUrl?.ToString() ?? string.Empty)"
                                        data-booking-parent-label="@entryDisplayTitle" data-booking-parent-type="entry"
                                        data-parent-entry="@block.Entry.EntryId">
                                        View full booking
                                    </button>
                                    @if (entryBooking.ConfirmationUrl is not null)
                                    {
                                        <a class="btn btn-sm btn-outline-secondary" target="_blank" rel="noopener"
                                            href="@entryBooking.ConfirmationUrl">Open booking link</a>
                                    }
                                </div>
                            </div>
                        }
                        @if (entryHasMetadata)
                        {
                            <partial name="_EntryMetadata" model="block.Entry.Metadata" />
                        }
                    </div>
                }
                @{
                    var allowBookingCreation = Model.AllowBookingCreation && entryBooking is null;
                    var showSpanBookingButtons = Model.AllowEntryEditing || allowBookingCreation;
                }
                @if (showSpanBookingButtons)
                {
                    <div class="timeline-actions">
                        @if (Model.AllowEntryEditing)
                        {
                            <button type="button" class="btn btn-sm btn-outline-primary me-2" data-edit-type="entry"
                                data-entry-id="@block.Entry.EntryId" data-entry-title="@block.Entry.Title"
                                data-entry-date="@(block.Entry.Date?.ToString("yyyy-MM-dd") ?? string.Empty)"
                                data-entry-end="@(block.Entry.EndDate?.ToString("yyyy-MM-dd") ?? string.Empty)"
                                data-entry-type="@block.Entry.ItemType"
                                data-entry-is-multi-day="@(block.Entry.IsMultiDay.ToString().ToLowerInvariant())"
                                data-entry-details="@(block.Entry.Details ?? string.Empty)"
                                data-entry-flight-airline="@(block.Entry.Metadata?.Flight?.Airline ?? string.Empty)"
                                data-entry-flight-number="@(block.Entry.Metadata?.Flight?.FlightNumber ?? string.Empty)"
                                data-entry-flight-departure-airport="@(block.Entry.Metadata?.Flight?.DepartureAirport ?? string.Empty)"
                                data-entry-flight-departure-time="@(block.Entry.Metadata?.Flight?.DepartureTime ?? string.Empty)"
                                data-entry-flight-arrival-airport="@(block.Entry.Metadata?.Flight?.ArrivalAirport ?? string.Empty)"
                                data-entry-flight-arrival-time="@(block.Entry.Metadata?.Flight?.ArrivalTime ?? string.Empty)"
                                data-entry-stay-property="@(block.Entry.Metadata?.Stay?.PropertyName ?? string.Empty)"
                                data-entry-stay-address="@(block.Entry.Metadata?.Stay?.Address ?? string.Empty)"
                                data-entry-stay-check-in="@(block.Entry.Metadata?.Stay?.CheckInTime ?? string.Empty)"
                                data-entry-stay-check-out="@(block.Entry.Metadata?.Stay?.CheckOutTime ?? string.Empty)"
                                data-entry-stay-room="@(block.Entry.Metadata?.Stay?.RoomType ?? string.Empty)"
                                data-entry-stay-confirmation="@(block.Entry.Metadata?.Stay?.ConfirmationNumber ?? string.Empty)">
                                Edit
                            </button>
                            <form method="post" asp-page-handler="DeleteEntry" class="d-inline">
                                <input type="hidden" name="entryId" value="@block.Entry.EntryId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        }
                        @if (allowBookingCreation)
                        {
                            <button type="button" class="btn btn-sm btn-outline-secondary" data-booking-action="add"
                                data-parent-type="entry" data-entry-id="@block.Entry.EntryId"
                                data-entry-title="@(block.Entry.Title ?? block.Entry.ItemType.GetDisplayName())"
                                data-entry-type="@block.Entry.ItemType"
                                data-entry-type-label="@block.Entry.ItemType.GetDisplayName()">
                                Add booking
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>