@using System.Text.Json
@using MX.TravelItinerary.Web.Infrastructure
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    var aiClientConnection = Configuration["ApplicationInsights:ClientConnectionString"];
    var aiClientConnectionJson = string.IsNullOrWhiteSpace(aiClientConnection)
    ? null
    : JsonSerializer.Serialize(aiClientConnection);
    var currencyCatalogJson = JsonSerializer.Serialize(CurrencyCatalog.All);
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Plans</title>
    <meta name="description" content="Manage your travel itineraries with offline support" />
    <meta name="theme-color" content="#0d6efd" />
    <link rel="manifest" href="~/manifest.json" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MX.TravelItinerary.Web.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Travel Plans</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/trips">Trips</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2">@User.Identity?.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account"
                                    asp-action="SignOut">Sign out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account"
                                    asp-action="SignIn">Sign in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Travel Plans - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/pwa.js" asp-append-version="true"></script>
    <script id="currencyCatalogData" type="application/json">
        @Html.Raw(currencyCatalogJson)
    </script>
    @if (aiClientConnectionJson is not null)
    {
        <script type="text/javascript">
            (function (win, doc) {
                var appInsights = win.appInsights || function (config) {
                    function addMethod(name) {
                        if (!name) {
                            return;
                        }

                        app[name] = function () {
                            var args = arguments;
                            app.queue.push(function () { app[name].apply(app, args); });
                        };
                    }

                    var app = { config: config }, script = doc.createElement("script");
                    app.queue = [];
                    script.src = config.url || "https://az416426.vo.msecnd.net/scripts/b/ai.2.min.js";
                    doc.getElementsByTagName("head")[0].appendChild(script);
                    addMethod("trackEvent");
                    addMethod("trackPageView");
                    addMethod("trackException");
                    addMethod("trackTrace");
                    addMethod("trackDependencyData");
                    addMethod("flush");
                    return app;
                }({ connectionString: @Html.Raw(aiClientConnectionJson) });

                win.appInsights = appInsights;
                appInsights.trackPageView();
            })(window, document);
        </script>
    }

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>