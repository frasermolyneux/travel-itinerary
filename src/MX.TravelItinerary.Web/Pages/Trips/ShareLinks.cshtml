@page
@model MX.TravelItinerary.Web.Pages.Trips.ShareLinksModel
@{
    ViewData["Title"] = "Share links";
    var trip = Model.TripDetails?.Trip;
}

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
        <p class="text-uppercase text-muted small mb-1">Share your itinerary</p>
        <h1 class="mb-1">@(trip?.Name ?? "Trip share links")</h1>
        @if (trip?.StartDate is not null || trip?.EndDate is not null)
        {
            <div class="text-muted">
                @trip?.StartDate?.ToString("MMM dd")
                @if (trip?.EndDate is not null)
                {
                    <text> â€“ @trip?.EndDate?.ToString("MMM dd")</text>
                }
            </div>
        }
    </div>
    <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-outline-secondary" href="/trips">Back to trips</a>
        @if (trip is not null)
        {
            <a class="btn btn-outline-secondary" asp-page="./Details"
                asp-route-tripSlug="@(string.IsNullOrWhiteSpace(trip.Slug) ? null : trip.Slug)"
                asp-route-tripId="@(string.IsNullOrWhiteSpace(trip.Slug) ? trip.TripId : null)">View timeline</a>
        }
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.StatusMessage
    </div>
}

@if (Model.TripDetails is null)
{
    <div class="alert alert-warning">Trip could not be loaded.</div>
}
else
{
    <div class="row g-4 align-items-start">
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0">
                    <div class="fw-semibold">@(Model.IsEditing ? "Update share link" : "Create share link")</div>
                    <div class="text-muted small">Guests can see a read-only timeline that follows these settings.</div>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Save">
                        <input type="hidden" asp-for="TripId" />
                        <input type="hidden" asp-for="TripSlug" />
                        <input type="hidden" asp-for="Input.TripId" />
                        <input type="hidden" asp-for="Input.ShareCode" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.ExpiresOn" class="form-label"></label>
                            <input asp-for="Input.ExpiresOn" class="form-control" type="datetime-local" />
                            <div class="form-text">Leave blank for a link that never expires.</div>
                            <span asp-validation-for="Input.ExpiresOn" class="text-danger"></span>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="Input.MaskBookings" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.MaskBookings" class="form-check-label"></label>
                            <div class="form-text">Only show timeline entries, hide booking references entirely.</div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="Input.IncludeCost" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.IncludeCost" class="form-check-label"></label>
                            <div class="form-text">Toggle to remove payment info and confirmation links.</div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="Input.ShowBookingConfirmations" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.ShowBookingConfirmations" class="form-check-label"></label>
                            <div class="form-text">When disabled, confirmation codes, cancellation policies, and booking
                                links stay hidden.</div>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="Input.ShowBookingMetadata" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.ShowBookingMetadata" class="form-check-label"></label>
                            <div class="form-text">Controls stay-specific details such as room type, check-in/out, and
                                included perks.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Notes" class="form-label"></label>
                            <textarea asp-for="Input.Notes" class="form-control" rows="3"
                            placeholder="Example: For family only"></textarea>
                            <span asp-validation-for="Input.Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex flex-wrap gap-2">
                            <button type="submit" class="btn btn-primary">@(Model.IsEditing ? "Save settings" : "Create                            link")</button>
                            @if (Model.IsEditing)
                            {
                                <a class="btn btn-outline-secondary" asp-page="./ShareLinks" asp-route-tripId="@Model.TripId"
                                    asp-route-tripSlug="@Model.TripSlug">Cancel edit</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-0">
                    <div class="fw-semibold">Active links</div>
                    <div class="text-muted small">Each link has its own switches and optional expiry date.</div>
                </div>
                <div class="card-body d-flex flex-column gap-3">
                    @if (Model.ShareLinks.Count == 0)
                    {
                        <div class="text-muted">No share links yet. Use the form to spin up the first one.</div>
                    }
                    else
                    {
                        @foreach (var link in Model.ShareLinks)
                        {
                            var shareUrl = Model.BuildShareUrl(link);
                            var isExpired = link.ExpiresOn is { } expires && expires < DateTimeOffset.UtcNow;
                            <div class="share-link-card border rounded-3 p-3">
                                <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-2">
                                    <div>
                                        <div class="text-uppercase small text-muted">Share code</div>
                                        <div class="fs-5 fw-semibold">@link.ShareCode</div>
                                    </div>
                                    <span class="badge @(isExpired ? "text-bg-secondary" : "text-bg-success")">
                                        @(isExpired ? "Expired" : "Active")
                                    </span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-uppercase small">Public URL</label>
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control" value="@shareUrl" readonly data-share-link-input />
                                        <button type="button" class="btn btn-outline-secondary" data-copy-link
                                            data-share-code="@link.ShareCode">Copy</button>
                                        <a class="btn btn-outline-primary" href="@shareUrl" target="_blank" rel="noopener"
                                            data-open-share-link data-share-code="@link.ShareCode">Open</a>
                                    </div>
                                </div>
                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    <span class="badge @(link.MaskBookings ? "text-bg-warning" : "text-bg-light text-dark")">
                                        @(link.MaskBookings ? "Bookings hidden" : "Bookings visible")
                                    </span>
                                    <span class="badge @(link.IncludeCost ? "text-bg-light text-dark" : "text-bg-warning")">
                                        @(link.IncludeCost ? "Costs visible" : "Costs hidden")
                                    </span>
                                    <span
                                        class="badge @(link.ShowBookingConfirmations ? "text-bg-light text-dark" : "text-bg-warning")">
                                        @(link.ShowBookingConfirmations ? "Confirmations visible" : "Confirmations hidden")
                                    </span>
                                    <span class="badge @(link.ShowBookingMetadata ? "text-bg-light text-dark" : "text-bg-warning")">
                                        @(link.ShowBookingMetadata ? "Metadata visible" : "Metadata hidden")
                                    </span>
                                    @if (!string.IsNullOrWhiteSpace(link.Notes))
                                    {
                                        <span class="badge text-bg-info text-wrap">@link.Notes</span>
                                    }
                                </div>
                                <div class="text-muted small mb-3">
                                    @if (link.ExpiresOn is { } expiry)
                                    {
                                        <span>Expires @expiry.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span>Does not expire</span>
                                    }
                                </div>
                                <div class="d-flex flex-wrap gap-2">
                                    <a class="btn btn-sm btn-outline-primary" asp-page="./ShareLinks"
                                        asp-route-tripId="@Model.TripId" asp-route-tripSlug="@Model.TripSlug"
                                        asp-route-edit="@link.ShareCode">Edit</a>
                                    <form method="post" asp-page-handler="Delete" class="d-inline"
                                        onsubmit="return confirm('Delete this share link?');">
                                        <input type="hidden" name="tripId" value="@Model.TripId" />
                                        <input type="hidden" name="tripSlug" value="@Model.TripSlug" />
                                        <input type="hidden" name="shareCode" value="@link.ShareCode" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const telemetry = {
            track(eventName, shareCode) {
                if (!eventName || !window.appInsights || typeof window.appInsights.trackEvent !== 'function') {
                    return;
                }

                window.appInsights.trackEvent({ name: eventName }, {
                    shareCode: shareCode || ''
                });
            }
        };

        document.addEventListener('click', (event) => {
            const copyTrigger = event.target.closest('[data-copy-link]');
            if (copyTrigger) {
                const input = copyTrigger.parentElement?.querySelector('[data-share-link-input]');
                if (!input) {
                    return;
                }

                navigator.clipboard?.writeText(input.value).then(() => {
                    copyTrigger.textContent = 'Copied!';
                    telemetry.track('shareLink:copied', copyTrigger.dataset.shareCode);
                    setTimeout(() => copyTrigger.textContent = 'Copy', 1500);
                });
                return;
            }

            const openTrigger = event.target.closest('[data-open-share-link]');
            if (openTrigger) {
                telemetry.track('shareLink:openedFromOwner', openTrigger.dataset.shareCode);
            }
        });
    </script>
}