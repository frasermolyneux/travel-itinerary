{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build solution",
            "program": "${workspaceFolder}/src/MX.TravelItinerary.Web/bin/Debug/net9.0/MX.TravelItinerary.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MX.TravelItinerary.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}